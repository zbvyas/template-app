<h1 align="center">Categories</h1>

<div align="center">
  <div align="center">
    <%= will_paginate %>
  </div>
  <% @categories.each do |category| %>
    <ul class="listing">
      <div class="row">
        <div class="well col-md-4 col-md-offset-4">
          <li class="article-title"><%= link_to "#{category.name}", category_path(category) %></li>
        </div>
      </div>
    </ul>
  <% end %>
  <div align="center">
    <%= will_paginate %>
  </div>
</div>
