<!-- The underscore at the beginning of this file name
signifies that it's a partial template -->

<% if @article.errors.any? %>
<div class="alert alert-warning">
  <h3>Errors:</h3>
  <ul>
    <% @article.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
</div>
<% end %>

<%= form_for @article do |f| %>
  <p>
    <%= f.label :title %><br/>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :description %><br/>
    <%= f.text_area :description %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>

<div class="btn btn-default">
  <%= link_to "Back", articles_path, :class => "btn-small" %>
</div>
