<h1>Articles</h1>
<hr>
<%= link_to "Create Article", new_article_path, class: "btn btn-primary"%>
<br><br>
<%= render 'layouts/messages' %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Links</th>
    </tr>
  </thead>
  <% @articles.each do |article| %>
  <tr>
    <td><%= article.title %></td>
    <td><%= article.description %></td>
    <td>
        <%= link_to "Edit", edit_article_path(article), :class => "btn btn-primary" %>
        <%= link_to "Show", article_path(article), :class => "btn btn-primary" %>
        <%= link_to "Delete", article_path(article), method: :delete, data: {confirm: "Are you sure?"}, :class => "btn btn-primary" %>
      </td>
  </tr>
  <% end %>
</table>
